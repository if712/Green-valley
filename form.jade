          | ШАГ 3
        h2.type-of-cottage__title
          | Тип коттеджа
        ul.type-of-cottage__list
          li.type-of-cottage__item
            label
              input#type-of-cottage__features-flagship(type="radio", name="type-of-cottage", checked="checked")
              .type-of-cottage__check-mark.check-mark
              .type-of-cottage__triangle
              .type-of-cottage__item-title
                | флагман
          li.type-of-cottage__item
            label
              input#type-of-cottage__features-lacustrine(type="radio", name="type-of-cottage")
              .type-of-cottage__check-mark.check-mark
              .type-of-cottage__triangle
              .type-of-cottage__item-title
                | озерный
          li.type-of-cottage__item
            label
              input#type-of-cottage__features-alder(type="radio", name="type-of-cottage")
              .type-of-cottage__check-mark.check-mark
              .type-of-cottage__triangle
              .type-of-cottage__item-title
                | ольховка
          li.type-of-cottage__item
